{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["dom", "es2022"],
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "useDefineForClassFields": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules"]
}
